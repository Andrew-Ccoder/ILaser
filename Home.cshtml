@model IEnumerable<Ilaser2.Models.Product >


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="background-color:#b6ff00;">
    <h1>Welcome Dear</h1>
    <p class="lead" style="color:black; ">
    Welcome in the space of Laser universal, you can publish your products if you have a lasr machine or you can purchase a product if you are searching about a speciefic product </p>
    <p><a href="@Url.Action("Login","Users")" class="btn btn-primary btn-lg">Know more &raquo;</a></p>
</div>


    @foreach (var item in Model)
    {
        var counter = 0;
        if (item.IsDeleted != true)
        {

<div class="container" style="border-style:groove">
    <div class="row">
        <div class="col-lg-5">
            <div class="card" style="width:400px">
                <img class="card-img-top" src="~/Uploads/@Html.DisplayFor(model => item.ProductMainPicture)" alt="Card image" style="width:30%">

                <h2>@Html.DisplayFor(modelItem => item.Name)</h2>

                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <h5 class="card-text">
                        Description:  @Html.DisplayFor(modelItem => item.Description) <br />
                        <br />
                        Quantity: @Html.DisplayFor(modelItem => item.QTY) <br /><br />
                        Price: @Html.DisplayFor(modelItem => item.Price)<br /><br />
                        Owner:@Html.DisplayFor(modelItem => item.User.User_FirstName)

                    </h5>
                </div>
            </div>

        </div>
        <div>
            @foreach (var subItem in item.Photos)
            {
                <img src="~/Uploads/@subItem.Photo_URL" class="img-circle" style="height:200px; width:100;">
            }
            <br />
            <br />
            <br />
            <br />

        </div>
        <div class="col-lg-4">
            <h2 style="font-family:Verdana, Geneva, Tahoma, sans-serif;font-size:larger;color:#0026ff">Customers Opinion</h2>
            @foreach (var c in item.Comments)
            {
                counter++;
                <h4>@Html.DisplayFor(modelItem => c.User.User_FirstName)</h4>

                        <h5>@Html.DisplayFor(modelItem => c.Description)</h5>

                if (counter == 3)
                {
                    break;
                }


            }
        </div>
        <div class="col-lg-3">

            @foreach (var R in item.Ratings)
            {

                <h6>@Html.DisplayFor(modelItem => R.User.User_FirstName)</h6>
                for (int i = 0; i < R.Rate_Range; i++)
                {
                    <span class="glyphicon glyphicon-star" style="color:gold"></span>

                }

                for (int i = R.Rate_Range; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star" style="color:black"></span>

                }
                <br />
                counter++;

                if (counter == 3)
                {
                    break;
                }
            }

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 btn btn-primary">
            @Html.ActionLink("Login to know more", "Login", "Users", new { id = item.Product_Id }, new { @class = "col-lg-12 btn btn-primary" })
        </div>


    </div>
</div>

        }

    }

