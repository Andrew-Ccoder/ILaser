@using Microsoft.AspNet.Identity
@using Ilaser2.Models

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

</head>
<body>
   
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            
                    <a href="~/Views/Users/Home.cshtml"><img src="~/Uploads/logo.jpg" style="height:50px;width:50px"/></a>      
            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    @Html.ActionLink("Ilaser", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </ul>
                <ul class="nav navbar-nav navbar-left">
                <li>
                    <a href="~/Users/Login">

                        <i class="glyphicon glyphicon-heart-empty"></i>
                        About
                    </a>
                </li>
                <li>
                    <a href="~/Users/Register">

                        <i class="glyphicon glyphicon-phone"></i>
                       Contact Us
                    </a>
                </li>

                </ul>

              @if (Session["ad_Id"] != null)
               {
                  using (Html.BeginForm("Logout", "Users", FormMethod.Post, new { id = "Logout" }))
                  {
                      var db = new ILaserEntities();
                      var UserID = User.Identity.GetUserId<int>();
                      var CurrentUser = db.Users.Where(a => a.User_Id == UserID).SingleOrDefault();
                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">
                        <li class="DropDown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                             <strong>Welcome : @Session["ad_username"].ToString()! </strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-user">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p>
                                                    <span class="glyphicon glyphicon-user" style="color:black"></span>
                                                </p>
                                            </div>

                                            <div class="col-lg-8">
                                                <p class="text-right">

                                                    <strong style="color:darkblue">
                                                       @Session["ad_username"].ToString()
                                                    </strong>
                                                </p>
                                                @if (Convert.ToInt32(Session["User_Type"]) == 2)
                                                {
                                                    <a href="~/Products/GetProductsByPublisher" class="btn btn-primary row">
                                                        Your Products
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="~/Index/Order_Product" class="btn btn-primary row">Your Ordres </a>


                                                }

                                                <a href="~/Users/EditProfile" class="btn btn-primary row"> Edite Profile </a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="divider">
                                <li>
                                    <div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p><a href="Javascript:document.getElementById('Logout').submit()" class="btn btn-danger btn-block">Logout </a></p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>


                        </li>
                    </ul>
                   }
               }
               else
               {

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="~/Users/Login">

                            <i class="glyphicon glyphicon-user"></i>
                            Login
                        </a>
                    </li>
                    <li>
                        <a href="~/Users/Register">

                            <i class="glyphicon glyphicon-lock"></i>
                            Register
                        </a>
                    </li>

                </ul>
               }
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
        <hr />
            
            <footer class="navbar navbar-fixed-bottom myfooter">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <h3>
                                <i class="glyphicon glyphicon-question-sign"></i>
                                Who we Are
                            </h3>
                            <p>

                              We are a company that provides a Laser Machine to make your drawings real on the wood or acleric or any metal 
                            </p>
                        </div>
                        <div class="col-md-4">
                            
                        </div>
                        <div class="col-md-4">
                            <h3>
                                <i class="glyphicon glyphicon-envelope"></i>
                                Contact Us
                            </h3>
                            <ul>
                                <li><a href="#"> Our Page on Facebook</a> </li>
                                <li><a href="#"> Follow us on twitter </a> </li>
                                <li><a href="#">Our channel on YouTube</a> </li>
                            </ul>
                        </div>

                    </div>

                </div>
                <div class="subfooter">
                    <span> All rights ar reserved - 2020</span>
                </div>
            </footer>
     
    </div>
  
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>




