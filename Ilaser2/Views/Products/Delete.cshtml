@model Ilaser2.Models.Product

@{
    ViewBag.Title = "Delete";
}
<div class="row">



    <div class="col-lg-offset-1 col-lg-5" style="color:gold;background-color:#070651;padding:15px;">
        <h2>Are you sure you want to delete this Product?</h2>

       
        <div>
            
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    product Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    product Discription
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    Product Quantity
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QTY)
                </dd>

                <dt>
                    Product Price
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    Publisher Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.User_FirstName)
                </dd>
                <dt>
                   
                </dt>

                <dd>
                    <img src="~/Uploads/@Html.DisplayFor(model=>model.ProductMainPicture)" class="thumbnail" style="width:150px;height:150px;" />

                </dd>
            </dl>
            <div>
                @ViewBag.Delete
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index",new { id="btn btn-success"} )
                </div>
            }
        </div>
        </div>
</div>