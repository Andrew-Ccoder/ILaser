@model System.Collections.Generic.IList<Ilaser2.Models.ProductRatesViewModel>
@{
    ViewBag.Title = "GetRatingsByProduct";
}


@foreach (var gr in Model)
{
    <div class="row">
        <div>
            

               
                @foreach (var item in gr.Items)
                {
                    Session["RatingId"] = item.Rate_Id;
                    Session["RatingRange"] = item.Rate_Range;
                    Session["RatedProductId"] = item.Product_Id;
                    Session["RatedUser"] = item.User_Id;
                    


                            <h3 style="font-family:Verdana, Geneva, Tahoma, sans-serif;font-size:larger;">@item.User.User_FirstName @item.User.User_LastName </h3>
                            for (int i = 0; i < item.Rate_Range; i++)
                    {
                                <span class="glyphicon glyphicon-star" style="color:gold"></span>

                            }
                            for (int i = item.Rate_Range; i < 5; i++)
                    {
                                <span class="glyphicon glyphicon-star-empty"></span>
                            }
                            <h6> From @item.User.Address</h6>
                      

                        if ((Session["ad_id"]).ToString() == (item.User_Id).ToString())
                    {
                           
                                <a href="@Url.Action("Delete", "Ratings")" class="btn btn-danger">Delete</a>
                          
                        }


                   
                }
           
        </div>
       
        </div>
        }



