@model IEnumerable<Ilaser2.Models.CommentedProductsViewModel >
@{
    ViewBag.Title = "GetCommentsByPublisher";
}

<h2>GetCommentsByPublisher</h2>
@foreach (var gr in Model)
{
    <h3>@gr.ProductName  </h3>
    <table class="table table-dark table-hover">
        <tr>
            
            <th>
               Comment 
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Adress
            </th>
            <th>
                Customer Phone Number
            </th>

            <th>
                Product Name
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                
                <th>
                    @item.Description
                </th>
                <th>
                    @item.User.User_FirstName
                </th>
                <th>
                    @item.User.Address
                </th>
                <th>
                    @item.User.Phone
                </th>
                <th>
                    @item.Product.Name
                </th>
            </tr>
        }
    </table>
}
