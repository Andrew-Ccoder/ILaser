@model IEnumerable<Ilaser2.Models.ProductPhotosViewModel >
@{
    ViewBag.Title = "Getphotosbyproduct";
}

<h2>Product Details</h2>

    @foreach (var gr in Model)
    {
        <h3>@gr.Productphoto  </h3>

        <div class="row">
            <div class="col-lg-6">
                @foreach (var item in gr.Items)
                { <dl class="dl-horizontal">


                      <dt>
                          @item.Product.Name
                      </dt>
                <dd>

                </dd>
                <dt>
                    <img src="~/Uploads/@Html.DisplayFor(model => item.Product.ProductMainPicture)" class="thumbnail" style="width:150px;height:150px;" />

                </dt>
             
                    <dd>
                        Discription: @item.Product.Description
                   
                <br />
                        Quantity in stock: @item.Product.QTY
                 
                        <br />
                    
                        Price:  @item.Product.Price
                 
                        <br />
             
                        Product Owner:  @item.Product.User.User_FirstName @item.Product.User.User_LastName
                    </dd>

                </dl>
                    break;

                }
                <div class="row">
                    <div class="col-lg-12 fancybox-image">

                        <br /><br />
                        @foreach (var item in gr.Items)
                {
                    if ((Session["ad_id"]).ToString() != (item.Product.UserId).ToString())
                    {
                                <div class="col-lg-5" style="display:inline-block;">
                                    <a class="fancybox" target="_parent" href="~/Uploads/@item.Photo_URL">
                                        <img src="~/Uploads/@Html.DisplayFor(model => item.Photo_URL)" class="thumbnail" style="width:150px;height:150px;" />
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-5" style="display:inline-block;">
                                    <a class="fancybox" target="_parent" rel="gallary1" href="~/Uploads/@item.Photo_URL">
                                        <img src="~/Uploads/@Html.DisplayFor(model => item.Photo_URL)" class="thumbnail" style="width:150px;height:150px;" />

                                    </a>
                                    <a href="@Url.Action("Delete", "Photos")" class="btn btn-danger" style="position:center;">Delete</a>
                                </div>
                            }

                            Session["PhotoId"] = item.Photo_Id;
                            Session["photoURL"] = item.Photo_URL;

                            Session["ProductPhotoId"] = item.Product_Id;
                            Session["ProductUser"] = item.Product.User.User_Id;
                            Session["ProductQty"] = item.Product.QTY;
                            Session["ProductPrice"] = item.Product.Price;
                            Session["ProductName"] = item.Product.Name;
                            Session["productDescription"] = item.Product.Description;



                        }
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
                        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
                        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                        <script src="~/Scripts/bootstrap.min.js"></script>
                        <script src="~/Scripts/jquery.js"></script>
                        <script src="~/Scripts/modernizr-2.6.2.js"></script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
                        <link href="~/Content/jquery.fancybox.css" rel="stylesheet" />

                        <link href="~/Content/jquery.fancybox-buttons.css" rel="stylesheet" />
                        <link href="~/Content/jquery.fancybox-thumbs.css" rel="stylesheet" />



                        <script src="~/scripts/jquery.fancybox.js"></script>

                        <script>
        $(function(){

            $(".fancybox").fancybox();
        });
                        </script>
                    </div>

                </div>
            </div>
           
            <div class="col-lg-3">
                @Html.Action("rating", "Products")
            </div>
            </div>
           
          
}

   
 