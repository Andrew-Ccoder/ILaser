@model Ilaser2.Models.Rating

@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>


@using (Html.BeginForm("Create", "Ratings", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4>Rating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div id="range">
            @Session["Range"]
        </div>

        <div id="con">
            <span id="span1" area-hidden="true" class="fa fa-star"></span>
            <span id="span2" area-hidden="true" class="fa fa-star"></span>
            <span id="span3" area-hidden="true" class="fa fa-star"></span>
            <span id="span4" area-hidden="true" class="fa fa-star"></span>
            <span id="span5" area-hidden="true" class="fa fa-star"></span>

        </div>


    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/bootstrap.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
@section scripts{


    <script type="text/javascript">
    var count = 0;
            $(document).ready(function () {

                $("#span1").click(function () {
                    $(".fa-star").css("color", "Black");
                    $("#span1").css("color", "Gold");
                    count = 1;
                });
                $("#span2").click(function () {
                    $(".fa-star").css("color", "Black");

                    $("#span1,#span2").css("color", "Gold");
                    count = 2;
                });
                $("#span3").click(function () {
                    $(".fa-star").css("color", "Black");

                    $("#span1,#span2,#span3").css("color", "Gold");
                    count = 3;
                });
                $("#span4").click(function () {
                    $(".fa-star").css("color", "Black");


                    $("#span1,#span2,#span3,#span4").css("color", "Gold");
                    count = 4;
                });
                $("#span5").click(function () {
                    $(".fa-star").css("color", "Black");


                    $("#span1,#span2,#span3,#span4,#span5").css("color", "Gold");
                    count = 5;
                });
            });
            document.getElementById("range") = count;
    </script>
}