@model IEnumerable<Ilaser2.Models.OrderedProductViewModel> 

@foreach (var gr in Model)
{
    <h3>@gr.ProductName  </h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Product Qty
            </th>
            <th>
                Product Total Price
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Adress
            </th>
            <th>
                Customer Phone Number
            </th>

            <th>
                Product Name
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <th>
                    @item.Qty
                </th>
                <th>
                    @item.Total_Price
                </th>
                <th>
                    @item.User.User_FirstName
                </th>
                <th>
                    @item.User.Address
                </th>
                <th>
                    @item.User.Phone
                </th>
                <th>
                    @item.Product.Name
                </th>
            </tr>
        }
    </table>
}

