@model IEnumerable<Ilaser2.Models.OrderedProductViewModel>
<div class="row">
    <div class="col-lg-offset-1 col-lg-5" style="color:gold;background-color:#13132b;padding:15px;">

        @foreach (var gr in Model)
        {
            <h3>@gr.ProductName  </h3>
            <table class="table table-dark table-hover">
                <tr>
                    <th>
                       Qty
                    </th>
                    <th>
                     Total Price
                    </th>
                    <th>
                      Name
                    </th>
                    <th>
                        Adress
                    </th>
                    <th>
                      Phone Number
                    </th>

                  
                </tr>
                @foreach (var item in gr.Items)
                {
                    <tr>
                        <th>
                            @item.Qty
                        </th>
                        <th>
                            @item.Total_Price
                        </th>
                        <th>
                            @item.User.User_FirstName
                        </th>
                        <th>
                            @item.User.Address
                        </th>
                        <th>
                            @item.User.Phone
                        </th>
                       
                    </tr>
                }
            </table>
        }
        </div>
    </div>
