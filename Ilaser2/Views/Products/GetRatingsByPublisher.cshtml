

@model IEnumerable<Ilaser2.Models.RatedProductsViewModel >
@{
    ViewBag.Title = "GetRatingsByPublisher";
}

<h2>GetCommentsByPublisher</h2>
@foreach (var gr in Model)
{
    <h3>@gr.ProductName  </h3>
    <table class="table table-bordered table-hover">
        <tr>

            <th>
                Rate
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Adress
            </th>
            <th>
                Customer Phone Number
            </th>

            <th>
                Product Name
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>

                <th>
                    @for (int i = 0; i < item.Rate_Range; i++)
                    {
                        <span class="glyphicon glyphicon-star" style="color:gold"></span>
                    }
                   @for (int i = item.Rate_Range; i < 5; i++)
                    {
                        <span class="glyphicon glyphicon-star-empty"></span>
                    }
                </th>
                <th>
                    @item.User.User_FirstName
                </th>
                <th>
                    @item.User.Address
                </th>
                <th>
                    @item.User.Phone
                </th>
                <th>
                    @item.Product.Name
                </th>
            </tr>
        }
    </table>
}
