@model Ilaser2.Models.Photo

@{
    ViewBag.Title = "Delete";
}
<div class="row">



    <div class="col-lg-offset-1 col-lg-5" style="color:gold;background-color:#070651;padding:15px;">
      
      

        <h3>Are you sure you want to delete this?</h3>
        <div>
            
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Product Photo
                </dt>

                <dd>
                    <img src="~/Uploads/@Html.DisplayFor(model => model.Photo_URL)" class="thumbnail" style="height:100px;width:100px;" />
                </dd>

                <dt>
                    Product Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |

                </div>
            }
        </div>
        </div>
</div>
