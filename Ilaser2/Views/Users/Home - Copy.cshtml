@model IEnumerable<Ilaser2.Models.Product>


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome Dear</h1>
    <p class="lead">
        Welcome in the space of Laser universal, you can publish your products if you have a lasr machine or you can purchase a product if you are searching about a speciefic product
    </p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:15px; padding-left:20px;">
        <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
        <h5>@Html.DisplayFor(modelItem => item.Description)</h5>

        <div class="row">
            @foreach (var subItem in item.Photos)
            {

                <div class="col-lg-5 thumbnail" style="margin-left:20px;margin-bottom:30px;">
                    <img src="~/Uploads/@subItem.Photo_URL" style="height:350px; width:auto;">

                    <h2>Users Comments</h2>
                    @foreach (var c in item.Comments)
                    {

                        <h3>@Html.DisplayFor(modelItem => c.Description)</h3>

                    }

                    @foreach (var R in item.Ratings)
                    {


                        <h3>@Html.DisplayFor(modelItem => R.Rate_Range)</h3>


                    }
                    @Html.ActionLink("Detais", "Login", "Users", new { prduct_Id = subItem.Product_Id }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
}
