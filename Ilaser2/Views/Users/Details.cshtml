@model Ilaser2.Models.User

@{
    ViewBag.Title = "Details";
}
<div class="row">



    <div class="col-lg-offset-1 col-lg-5" style="color:Gold;background-color:#050630;padding:15px;">
        <h2>Owner Details</h2>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User_FirstName) @Html.DisplayFor(model => model.User_LastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt>
                    
                </dt>

                <dd>
                    <img src="~/Uploads/@Html.DisplayFor(model=>model.UserPhoto)" class="thumbnail" style="width:150px;height:150px;" />
                </dd>
            </dl>
        </div>

        </div>
</div>