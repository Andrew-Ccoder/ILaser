        @section scripts{


            <script type="text/javascript">
                var count = 0;

                $(document).ready(function () {

                    $("#span1").click(function () {
                        $(".fa-star").css("color", "Black");
                        $("#span1").css("color", "Gold");
                        count = 1;
                        document.getElementById("range").value = count;
                    });
                    $("#span2").click(function () {
                        $(".fa-star").css("color", "Black");

                        $("#span1,#span2").css("color", "Gold");
                        count = 2;
                        document.getElementById("range").value = count;
                    });
                    $("#span3").click(function () {
                        $(".fa-star").css("color", "Black");

                        $("#span1,#span2,#span3").css("color", "Gold");
                        count = 3;
                        document.getElementById("range").value = count;
                    });
                    $("#span4").click(function () {
                        $(".fa-star").css("color", "Black");


                        $("#span1,#span2,#span3,#span4").css("color", "Gold");
                        count = 4;
                        document.getElementById("range").value = count;
                    });
                    $("#span5").click(function () {
                        $(".fa-star").css("color", "Black");


                        $("#span1,#span2,#span3,#span4,#span5").css("color", "Gold");
                        count = 5;
                        document.getElementById("range").value = count;
                    });
                });

            </script>

